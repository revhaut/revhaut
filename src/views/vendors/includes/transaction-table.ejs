<section id="recentSales">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <p>Recent Sales</p>
        <div class="column-inner shadow-lg dashboard-rounded">
          <div class="table-responsive">
            <table class="table table-hover">
              <tbody>
                <tr>
                  <th>TRANSACTION ID</th>
                  <th>PRODUCT</th>
                  <th>AMOUNT</th>
                  <th>COMMISSION</th>
                  <th>STATUS</th>
                  <th>DATE CREATED</th>
                </tr>
                <% products.forEach(product =>{%>
                <tr>
                  <td><%= product.transaction.transaction_ref_id %></td>
                  <td><%= product.product.name %></td>
                  <td>N <%= product.product.amount.toLocaleString() %></td>
                  <td>N <%= product.transaction.commission.toLocaleString() %></td>
                  <td>
                    <a
                      href="#"
                      class="badge <% if(product.transaction.status === 'pending'){ %> <%= 'badge-warning' %> <% } %> <% if(product.transaction.status === 'completed'){ %> <%= 'badge-success' %> <% } %> <% if(product.transaction.status === 'rejected'){ %> <%= 'badge-danger' %> <% } %>"
                      ><%= product.transaction.status %></a
                    >
                  </td>
                  <td>06-08-2021</td>
                </tr>
                <%}) %>
