                                        <a href="#" class="input-group-text" id="inputGroupPrepend2">Copy</a>
                                      </div>
                                    </div>
                                  </div>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-5 d-flex justify-content-end pt-4">
                  <h5>₦ <%= product.product_amount%></h5>
