                                      <img src="<%= product.product_url%>" class="img-fluid dashboard-rounded" />
                                    </div>
                                    <div class="col-sm-7 d-flex align-items-center">
                                      <h5 class="mb-4">₦ <%=product.product_amount%></h5>
                                    </div>
                                  </div>
                                </div>

                                <hr class="mb-5" />
                                <form class="mt-4">
